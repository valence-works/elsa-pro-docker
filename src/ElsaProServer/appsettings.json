{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Elsa": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Elsa": "Data Source=elsa.db"
  },
  "Elsa": {
    "Shell": {
      "Features": [
        "Identity",
        "DefaultAuthentication",
        {
          "Name": "SqliteWorkflowPersistence",
          "ConnectionString": "Data Source=elsa_workflows.db;Cache=Shared",
          "DbContextOptions": {
            "EnableSensitiveDataLogging": false,
            "EnableDetailedErrors": false
          }
        },
        {
          "Name": "FastEndpoints",
          "EndpointRoutePrefix": "elsa/api"
        }
      ],
      "Configuration": {
        "Identity": {
          "SigningKey": "CHANGE_ME_TO_A_SECURE_RANDOM_KEY"
        }
      }
    },
    "Cors": {
      "AllowedOrigins": [
        "http://localhost:5001",
        "https://localhost:5001"
      ]
    }
  }
}
