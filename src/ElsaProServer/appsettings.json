{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Elsa": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Elsa": "Data Source=elsa.db"
  },
  "Elsa": {
    "Shell": {
      "Features": ["Identity", "DefaultAuthentication", "SqliteWorkflowPersistence"]
    },
    "Identity": {
      "SigningKey": "CHANGE_ME_TO_A_SECURE_RANDOM_KEY"
    },
    "Cors": {
      "AllowedOrigins": [
        "http://localhost:3000",
        "https://localhost:3000"
      ]
    }
  }
}
